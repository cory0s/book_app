<!DOCTYPE html>
<html lang="en">
<head>
    <title>Book App</title>
    <link rel="stylesheet" type="text/css" href="./styles/base.css"/>
</head>
<body>
    <main>
        <h1>Returned Search</h1>

            <%  searchesResults.forEach((book, index) => { %>
            <div>
            <%= book.title %>
            <button id="<%= index %>" class="book-details-button">View Book Details</button>
            <form action="/books" method="post" class="<%= index %>" id="book-details-form">
                <input name="title" value="<%=book.title%>"  placeholder="<%=book.title%>"></input>
                <input name="author" value="<%=book.author%>" placeholder="<%=book.author%>"></input>
                <input name="ISBN" value="<%=book.ISBN%>" placeholder="<%=book.ISBN%>" ></input>
                <input name="image_url" value="<%=book.image_url%>" placeholder="<%=book.image_url%>" ></input>
                <input name="description" value="<%=book.description%>" placeholder="<%=book.description%>" ></input>
                <input name="bookshelf" value="<%=book.bookshelf%>" placeholder="<%=book.bookshelf%>" ></input>
                <button type="submit">Add to My Books</button>
            </form>
            </div>
            <% }) %>
    </main>
</body>

<script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
<script>
    $('.book-details-button').click(function (el) {
        const elID = el.currentTarget.id;
        $(`.${elID}`).toggle(300);
    });
</script>
</html>